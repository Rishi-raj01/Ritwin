{
  "version": 2,
  "builds": [
    { "src": "*.js", "use": "@vercel/node" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://ritwin.shop/$1",
      "permanent": true,
      "has": [
        { "type": "host", "value": "ritwin.vercel.app" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Powered-By", "value": "Ritwin Handmade Gifts" }
      ]
    }
  ]
}
