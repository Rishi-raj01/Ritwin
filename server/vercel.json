{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "client/build/**", "use": "@vercel/static" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://ritwin.shop/$1",
      "permanent": true,
      "has": [
        { "type": "host", "value": "ritwin.vercel.app" }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Powered-By", "value": "Ritwin Handmade Gifts" }
      ]
    }
  ]
}
